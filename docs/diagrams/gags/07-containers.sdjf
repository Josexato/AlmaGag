  "connections": [
    {
      "from": "api",
      "to": "db",
      "label": "queries",
      "direction": "bidirectional"
    },
    {
      "from": "api",
      "to": "cache",
      "label": "get/set",
      "direction": "bidirectional"
    },
    {
      "from": "webapp",
      "to": "api",
      "waypoints": [
        {"x": 640, "y": 200},
        {"x": 190, "y": 200}
      ],
      "label": "HTTP requests",
      "direction": "forward"
    },
    {
      "from": "mobile",
      "to": "api",
      "waypoints": [
        {"x": 790, "y": 250},
        {"x": 190, "y": 250}
      ],
      "label": "HTTP requests",
      "direction": "forward"
    },
    {
      "from": "api",
      "to": "external-service",
      "waypoints": [
        {"x": 190, "y": 400},
        {"x": 490, "y": 400}
      ],
      "label": "integrations",
      "direction": "forward"
    }
  ]
