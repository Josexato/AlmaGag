      "padding": 50,
      "aspect_ratio": 1.3,
      "contains": [
        {"id": "api", "scope": "full"},
        {"id": "db", "scope": "full"},
        {"id": "cache", "scope": "border"}
      ]
    },
    {
      "id": "api",
      "type": "server",
      "x": 150,
      "y": 150,
      "label": "REST API",
      "color": "green"
    },
    {
      "id": "db",
      "type": "building",
      "x": 350,
      "y": 150,
      "label": "Database",
      "color": "orange"
    },
    {
      "id": "cache",
      "type": "cloud",
      "x": 250,
      "y": 280,
      "label": "Redis Cache",
      "color": "cyan"
    },
    {
      "id": "frontend-module",
      "type": "building",
      "label": "Frontend Module",
      "color": "lightgreen",
      "padding": 50,
      "aspect_ratio": 1.3,
      "contains": [
        {"id": "webapp", "scope": "full"},
        {"id": "mobile", "scope": "full"}
